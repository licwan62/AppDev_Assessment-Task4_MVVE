<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Task4_MVVE.Pages.OpeningPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="OpeningPage">
    <VerticalStackLayout>
        <Label Style="{StaticResource Headline}" Text="{Binding Data}" />
        <TableView>
            <TableRoot>
                <TableSection Title="Selected Livestock">
                    <TextCell Detail="Type" Text="Type" />
                    <TextCell Detail="ID" Text="ID" />
                    <TextCell Detail="Cost" Text="Cost" />
                    <TextCell Detail="Weight" Text="Weight" />
                    <TextCell Detail="Colour" Text="Colour" />
                    <TextCell Detail="Produce" Text="Produce" />
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>